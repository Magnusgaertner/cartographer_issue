
<robot name="roscar">
  <material name="orange">
    <color rgba="1.0 0.5 0.2 1" />
  </material>
  <material name="gray">
    <color rgba="0.2 0.2 0.2 0.5" />
  </material>



  <link name="vn300">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.06 0.04 0.02" />
      </geometry>
      <material name="orange" />
    </visual>
  </link>

  <link name="velodyne">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder length="0.5" radius="0.3" />
      </geometry>
      <material name="orange" />
    </visual>
  </link>

  <link name="zed_base_link">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.06 0.14 0.04" />
      </geometry>
      <material name="orange" />
    </visual>
  </link>

<!-- this is the CoM of the car -->
  <link name="base_link" >
    <visual>
      <origin rpy="1.57079632679 0.06 3.1415926" xyz="-0.6 0.25 0.2"/>
      <geometry>
        <mesh filename="package://car_model_visualization/meshes/ny-D2018_master_test_5.stl" scale="0.001 0.001 0.001"/>
      </geometry>
 	<material name="gray"/>
    </visual>
  </link>

<!-- Joints -->
  <joint name="vn300_link_joint" type="fixed">
    <parent link="velodyne" />
    <child link="vn300" />
    <origin xyz="-1 0 0.2" /><!-- TODO -->
  </joint>

  <joint name="velodyne_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="velodyne" />
    <origin rpy="0 0 0" xyz="1.7 0 -0.15" />
  </joint>

  <joint name="zed_link_joint" type="fixed">
    <parent link="velodyne" />
    <child link="zed_base_link" />
    <origin rpy="0 0 0" xyz="-0.83 0 0.5" />
  </joint>

</robot>
